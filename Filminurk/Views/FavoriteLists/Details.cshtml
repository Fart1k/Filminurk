@model Filminurk.Models.FavoriteLists.FavoriteListUserDetailsViewModel
@{
	int rowNumber = 1;
}
<div>
	@if (Model.IsReported == true)
	{
		@:Sinu nimekiri rikub kogukonna reegleid<br/>
		@:Oleme seadnud nimekirja privaatseks kuni admin selle üle vaatab<br/>
	}
	<table>
		<tr><h1>@Model.ListName</h1></tr>
		<tr>@* <partial name=*_ImageIndex* model = "@Model.Image"></partial> *@</tr>
		<tr>@Model.IsPrivate.ToString()</tr>
	</table>
</div>
<div>
	<form method="post">
		<table class="table">
			@foreach (var movie in Model.ListOfMovies)
			{
				<tr>
					<table class="table" style="border:thick">
						<tr>
							<td colspan="2">@movie.Title</td>
						</tr>
						<tr>
							<td>(IMAGE HERE)</td>
							<td>
								<table>
									<tr>@movie.Description</tr>
									<tr>@movie.Director</tr>
									<tr>@movie.CurrentRating</tr>
									<tr>@movie.MovieGenre</tr>
								</table>
							</td>
						</tr>
					</table>
				</tr>
			}
		</table>
	
		<div>
		
				<input asp-action="UserDelete" asp-controller="FavoriteLists" asp-route-id="@Model.FavoriteListID" type="submit" class="btn btn-danger"
					value="Kustuta Nimekiri" />
				<input asp-action="UserTogglePrivacy" asp-controller="FavoriteLists" asp-route-id="@Model.FavoriteListID" type="submit" class="btn btn-warning"
					   value="Muuda nimekiri privaatseks" />

				@* <a asp-action="UserTogglePrivacy" asp-controller="FavoriteLists" asp-route-id="@Model.FavoriteListID" formmethod="get" class="btn btn-warning" *@
				@* asp-route-thisuserid="@Model.ListBelongsToUser">Click</a> *@
				<input asp-action="UserEditList" asp-controller="FavoriteLists" asp-route-id="@Model.FavoriteListID" type="submit" class="btn btn-success"
				value="Muuda nimekirja sisu ja andmeid" />
				<a asp-action="Index" asp-controller="FavoriteLists" class="btn btn-light">Tagasi</a>
		
		</div>
	</form>
</div>