@using Filminurk.Core.Domain
@using Filminurk.Models.Actors

@model Filminurk.Models.Actors.ActorsCreateUpdateViewModel

@if (Model.ActorID.HasValue)
{
	<h1>Edit actor</h1>
}
else
{
	<h1>Add actor</h1>
}

<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="ActorID" type="hidden" />
		<input asp-for="EntryCreatedAt" type="hidden" />
		<input asp-for="EntryModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstName" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="LastName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="LastName" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="NickName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="NickName" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="MoviesActedFor" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="MoviesActedFor" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Age" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Age" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Gender" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Gender" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="ActorRegion" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<select asp-for="ActorRegion" asp-items="Html.GetEnumSelectList<Region>()">
					<option value="">-- Actor region --</option>
				</select>
				<span asp-validation-for="ActorRegion"></span>
			</div>
		</div>

		@if (Model.ActorID.HasValue)
		{
			<input asp-action="Update" asp-controller="Actors" type="submit" class="btn btn-primary" value="Update" />
		}
		else
		{
			<input asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary" value="Create" />
		}

	</form>
</div>
