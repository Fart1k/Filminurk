@model Filminurk.Models.Actors.ActorsDeleteViewModel

<h1>Delete film</h1>

<div>
	<h4>Film</h4>
	<hr />

	<dl class="row">
		<div class="form-group-row">
			<label asp-for="ActorID" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.ActorID)
		</div>
	</dl>

	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.FirstName)
		</div>
	</dl>

	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="LastName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.LastName)
		</div>
	</dl>

	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="NickName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.NickName)
		</div>
	</dl>

	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="MoviesActedFor" class="col-sm-2 col-form-label"></label>
			@foreach (var movie in Model.MoviesActedFor)
			{
				string komovie = movie + ", ";
				@Html.DisplayFor(m => komovie)
			}
		</div>
	</dl>

	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="Age" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Age)
		</div>
	</dl>
	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="Gender" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Gender)
		</div>
	</dl>
	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="ActorRegion" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.ActorRegion)
		</div>
	</dl>
	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="EntryCreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.EntryCreatedAt)
		</div>
	</dl>
	
	<dl class="row">
		<div class="form-group-row">
			<label asp-for="EntryModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.EntryModifiedAt)
		</div>
	</dl>
	<hr />
	<form method="post" role="form">
		<input type="hidden" asp-for="ActorID" />
		<input type="submit" asp-action="DeleteConfirmation" asp-route-id="@Model.ActorID" value="Kustuta" class="btn btn-danger" />
		<a asp-action="Index" asp-controller="Actors" class="btn btn-success">Tagasi loendisse</a>
	</form>
</div>