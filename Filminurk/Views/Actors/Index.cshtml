@model IEnumerable<Filminurk.Models.Actors.ActorsIndexViewModel>

@{
	int rowNumber = 1;
}

<div>
	<a asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary">Add Actor</a>
	<div class="h1">
		Actors
	</div>
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">FirstName</th>
				<th scope="col">LastName</th>
				<th scope="col">Age</th>
				<th scope="col">Gender</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var actor in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@actor.FirstName</td>
					<td>@actor.LastName</td>
					<td>@actor.Age</td>
					<td>@actor.Gender</td>
					<td>
						<a asp-action="Update" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-outline-primary">Update</a>
						<a asp-action="Details" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-outline-primary">Details</a>
						<a asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-outline-primary">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</form>
